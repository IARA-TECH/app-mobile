<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mobile.app_iara.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.mobile.app_iara.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <action
        android:id="@+id/action_dashboard_to_technicalFailures"
        app:destination="@id/technicalFailuresFragment" />
    <action
        android:id="@+id/action_dashboard_to_shiftComparison"
        app:destination="@id/shifComparisonFragment" />

    <fragment
        android:id="@+id/navigation_gestao"
        android:name="com.mobile.app_iara.ui.management.ManagementFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_gestao" />

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="com.mobile.app_iara.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/technicalFailuresFragment"
        android:name="com.mobile.app_iara.ui.dashboard.technicalfailures.TechnicalFailuresFragment"
        android:label="fragment_technical_failures"
        tools:layout="@layout/fragment_technical_failures" />

    <fragment
        android:id="@+id/shifComparisonFragment"
        android:name="com.mobile.app_iara.ui.dashboard.ShiftComparisonFragment"
        android:label="fragment_shift_comparison"
        tools:layout="@layout/fragment_shift_comparison" />

</navigation>