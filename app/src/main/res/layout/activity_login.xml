<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.LoginActivity"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="0dp">


    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="73dp"
        android:layout_height="66dp"
        android:background="@null"
        android:contentDescription="Botão para voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setavoltar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/rfdewibold"
        android:text="Bem-vindo ao"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="338dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_arredondado"
        android:gravity="center_vertical|start"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmailOuCpf"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:fontFamily="@font/rfdewilight"
            android:hint="Insira seu e-mail ou CPF"
            android:inputType="text"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#72525353"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnLoginInicio2"
        android:layout_width="338dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2B3078"
        android:fontFamily="@font/rfdewibold"
        android:stateListAnimator="@null"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputSenha" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputSenha"
        android:layout_width="338dp"
        android:layout_height="52dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/input_arredondado"
        android:gravity="center_vertical|start"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/senhaInput"
            android:layout_width="277dp"
            android:layout_height="30dp"
            android:background="@null"
            android:fontFamily="@font/rfdewilight"
            android:hint="Insira sua senha"
            android:inputType="textPassword"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColorHint="#72525353"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/iaraazul" />

    <ImageButton
        android:id="@+id/btnToggleSenha"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="290dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Botão para esconder senha"
        android:foreground="@null"
        app:layout_constraintBottom_toBottomOf="@+id/inputSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputSenha"
        app:layout_constraintTop_toTopOf="@+id/inputSenha"
        app:srcCompat="@drawable/olhoaberto" />

    <TextView
        android:id="@+id/inputSenhaTitulo"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Senha"
        app:layout_constraintBottom_toTopOf="@+id/inputSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="202dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/rfdewiregular"
        android:text="Faça login para continuar"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="E-mail ou CPF"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/divider"
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="88dp"
        android:background="?android:attr/listDivider"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginInicio2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="105dp"
        android:layout_height="16dp"
        android:layout_marginTop="79dp"
        android:background="@color/branco_background"
        android:backgroundTint="@color/branco_background"
        android:text="Ou entre com"
        android:textAlignment="center"
        android:textColor="#72525353"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginInicio2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/branco_background"
        android:contentDescription="Botão para logar com Microsoft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:srcCompat="@drawable/logomicrosoft" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/branco_background"
        android:contentDescription="Botão para logar com Google"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:srcCompat="@drawable/logogoogle" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/branco_background"
        android:contentDescription="Botão para logar com Linkedin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:srcCompat="@drawable/logolinkedin" />

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="58dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnLoginInicio2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputSenha">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="158dp"
            android:layout_height="42dp"
            android:background="@android:color/transparent"
            android:buttonTint="@color/selecao_personalizada"
            android:fontFamily="@font/rfdewilight"
            android:foreground="@null"
            android:text="Manter conectado"
            android:textColorLink="#87A5D8"
            android:textSize="13sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="35dp"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:clickable="true"
            android:fontFamily="@font/rfdewilight"
            android:gravity="center"
            android:text="Esqueceu sua senha?"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="41dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginInicio2">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginRight="6dp"
            android:text="Ainda não tem uma conta?"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/rfdewibold"
            android:text="Cadastre-se"
            android:textColor="#2B3077"
            android:textSize="12sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>