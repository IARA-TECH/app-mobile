<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/bg_bottom_sheet_rounded"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_error"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=" Erro ao registrar ábaco"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Não foi possível criar o ábaco"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primaryBlue"
            android:fontFamily="@font/rfdewibold"
            android:text="Tente novamente"
            android:textAllCaps="false"
            android:textColor="@color/backgroundWhite"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

    </LinearLayout>

</FrameLayout>